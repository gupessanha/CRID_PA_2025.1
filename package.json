{
  "name": "sistema-notas-blockchain",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de notas usando Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:solidity": "node scripts/run-tests.js",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network sepolia",
    "verify": "hardhat verify --network sepolia",
    "node": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "console": "npx hardhat console",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "coverage": "npx hardhat coverage",
    "lint": "npx solhint '**/*.sol'",
    "lint:fix": "npx solhint --fix '**/*.sol'",
    "format": "npx prettier --write '**/*.{sol,js,json,md}'",
    "format:check": "npx prettier --check '**/*.{sol,js,json,md}'",
    "security": "npx hardhat compile && slither . --exclude-dependencies --exclude-informational"
  },
  "keywords": [
    "blockchain",
    "solidity",
    "smart-contracts",
    "ethereum",
    "education",
    "grades",
    "academic"
  ],
  "author": "CRID - Programação Avançada 2025.1",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.25.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/sistema-notas-blockchain.git"
  },
  "bugs": {
    "url": "https://github.com/username/sistema-notas-blockchain/issues"
  },
  "homepage": "https://github.com/username/sistema-notas-blockchain#readme"
}
